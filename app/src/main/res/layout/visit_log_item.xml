<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

            <TextView
                android:id="@+id/item_log_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="张三丰"/>
            <TextView
                android:id="@+id/item_visitor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="张三丰"/>
            <TextView
                android:id="@+id/item_visit_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="送货"/>
            <TextView
                android:id="@+id/item_visited_dept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="技术部"/>
            <TextView
                android:id="@+id/item_visited_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="李从礼"/>
            <TextView
                android:id="@+id/item_visit_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="2015/12/01 10:10:10"/>
            <TextView
                android:id="@+id/item_leave_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="2015/12/01 10:10:10"/>
            <TextView
                android:id="@+id/item_visit_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2015/12/01 10:10:10"/>

</LinearLayout>
