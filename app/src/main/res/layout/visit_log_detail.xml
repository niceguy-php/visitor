<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来访人"
            android:textColor="@color/colorPrimaryDark" />-->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="4"
            android:rowCount="4">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="身份证头像：" />

            <ImageView
                android:id="@+id/detail_idcard_avatar"
                android:layout_width="50dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="拍照图片：" />

            <ImageView
                android:id="@+id/detail_cameraTake_avatar"
                android:layout_width="100dp"
                android:layout_height="60dp" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="来访人："
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/detail_visitor_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="性别：" />

            <TextView
                android:id="@+id/detail_visitor_sex"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="民族：" />

            <TextView
                android:id="@+id/detail_visitor_ethnic"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="生日：" />

            <TextView
                android:id="@+id/detail_visitor_birthday"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="住址：" />

            <TextView
                android:id="@+id/detail_visitor_address"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="身份证号：" />

            <TextView
                android:id="@+id/detail_visitor_idno"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="签证机关：" />

            <TextView
                android:id="@+id/detail_visitor_police"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="有效期限：" />

            <TextView
                android:id="@+id/detail_valid_date"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="来访人数：" />

            <TextView
                android:id="@+id/detail_visitor_count"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="来访人电话：" />

            <TextView
                android:id="@+id/detail_visitor_phone"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="车辆牌号：" />

            <TextView
                android:id="@+id/detail_car_num"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="随身物品：" />

            <TextView
                android:id="@+id/detail_visit_take"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text=""
                />


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="来访时间：" />

            <TextView
                android:id="@+id/detail_visit_time"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="离开时间：" />

            <TextView
                android:id="@+id/detail_leave_time"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="来访事由：" />

            <TextView
                android:id="@+id/detail_visit_reason"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="来访状态：" />

            <TextView
                android:id="@+id/detail_visit_status"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/holo_red_dark" />



        </GridLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/menu_border_color">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="被访人"
            android:textColor="@color/colorPrimaryDark" />-->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="6"
            android:rowCount="4">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="被访人："
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/detail_visited_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="性别：" />

            <TextView
                android:id="@+id/detail_visited_sex"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="所属部门：" />

            <TextView
                android:id="@+id/detail_visited_dept"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="被访人电话：" />

            <TextView
                android:id="@+id/detail_visited_phone"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="被访人职位：" />

            <TextView
                android:id="@+id/detail_visited_pos"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="值班人员：" />

            <TextView
                android:id="@+id/detail_duty_user"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="" />

        </GridLayout>
    </LinearLayout>


</LinearLayout>

